{
  "parser": "babel-eslint",
  "plugins": ["import", "jsx-a11y", "react"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "react/prefer-stateless-function": [0, { "ignorePureComponents": true }]
  },
  "extends": ["airbnb"]
}